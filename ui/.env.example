# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Authentication Requirement
# Set to 'true' to require authentication for all UI access
NEXT_PUBLIC_REQUIRE_AUTH=false

# Local Authentication (Username/Password)
# Format: username1:password1,username2:password2
# Leave empty to disable local authentication
LOCAL_AUTH_USERS=admin:admin123,user:password

# Provider availability flags (auto-set by docker-compose)
NEXT_PUBLIC_HAS_LOCAL_AUTH=true
NEXT_PUBLIC_HAS_GOOGLE_AUTH=false
NEXT_PUBLIC_HAS_GITHUB_AUTH=false

# OAuth Providers - Configure at least one
# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Azure AD (https://portal.azure.com/)
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# Agent API URL
NEXT_PUBLIC_AGENT_URL=http://localhost:8000
